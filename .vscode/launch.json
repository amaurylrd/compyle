{
    "configurations": [
      {
        "name": "Python: Django Service",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "args": [
          "runserver"
        ],
        "django": true,
        "justMyCode": false,
        "envFile": "${workspaceFolder}/.env",
      },
      {
        "name": "Python: Django Test",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "args": [
          "test",
          "--no-input"
        ],
        "django": true,
        "justMyCode": true,
        "envFile": "${workspaceFolder}/.env"
      }
    ],
  }
